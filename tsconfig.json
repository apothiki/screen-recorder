{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "allowJs": true,
    "checkJs": true,

    /* Preact Config */
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "skipLibCheck": true,

    "baseUrl": "./",
    "paths": {
      "react": ["./node_modules/preact/compat/"],
      "react-dom": ["./node_modules/preact/compat/"],

      /* electron-vite Config */
      "@main*": ["src/main*"],
      "@lib*": ["src/lib*"],
      "@*": ["src/renderer*"]
    },

    /* Transpile namespace imports to default imports */
    "esModuleInterop": true
  },
  "include": ["node_modules/vite/client.d.ts", "**/*"],
  "parseOptions": {
    "project": "./tsconfig.json"
  }
}
